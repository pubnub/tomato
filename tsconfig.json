{
  "compilerOptions": {
    "module": "ESNext",
    "target": "ESNext",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "outDir": "dist",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "declaration": true,
    "strict": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "#di": ["src/di/index.ts"],
      "#utils": ["./src/utils.ts"],
      "#type/*": ["./src/types/*"],
      "#component/*": ["./src/components/*"]
    }
  },
  "include": ["./src"],
  "exclude": ["./context.d.ts"]
}
